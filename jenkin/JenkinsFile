pipeline {
    agent any
    stages {
        stage("Clean Up") {
            steps {
                deleteDir()
            }
        }
        stage("Clone Repo") {
            steps {
                sh "git clone https://github.com/tmtam612/clothes.git"
            }
        }
        stage("Build") {
            steps {
                dir("clothes") {
                    sh "npm install"
                }
            }
        }
        stage("Run") {
            steps {
                dir("clothes") {
                    sh "npm start"
                }
            }
        }
        stage("Test") {
            steps {
                dir("clothes") {
                    sh "npm run test"
                }
            }
        }
    }
}